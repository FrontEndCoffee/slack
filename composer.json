{
    "name": "uptimeproject/slack",
    "description": "Simple client to send notifications through Slack webhooks.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jesse Kramer",
            "email": "jesse@kramerventures.nl"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^7.5",
        "uptimeproject/php-cs-fixer-config": "^1.1",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "UptimeProject\\Slack\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UptimeProject\\Slack\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
